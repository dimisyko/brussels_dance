-const title = "Accueil"
-const artistes = [{alt : "Ayelen Parolin",img : "portrait1.webp"},{alt : "Vera Tussing",img :"portrait2.webp"}, {alt : "Thierry Smits",img :"portrait3.webp"}, {alt : "Julien Carlier",img :"portrait4.webp"}]
-const partners = [{alt : "Ville de Bruxelles",img : "logo-bruxelles-ville.webp"},{alt : "Federation wallonie Bruxelles",img :"logo1.webp"}, {alt : "Bozar",img :"logo2.webp"}, {alt : "Les brigitinnes",img :"logo3.webp"},  {alt : "Ixelles Elsene",img :"logo4.webp"}, {alt : "Le Jacques Franck",img :"logo5.webp"}, {alt : "KVS",img :"logo6.webp"}, {alt : "Kaai Theater",img :"logo7.webp"}]
include ../components/head.pug
      main.app#app
        .content
          .bg-black
          section.home
           h1.home__title Brussels dance
           .home__wrapper-imgs
             figure.home__img.d-flex.hide
               img(src=require("../assets/img/brussels_dance.webp"), alt="brussels dance")
             figure.home__img.d-flex.hide
               img(src=require("../assets/img/brussels_dance2.webp"), alt="brussels dance")
          section.about.w-90
            .about__bg
               button.about__btn-close(type="button" data-toggle="close" aria-label="close video") Fermer
            .about__edition.sect-mg-top
             .about__left
                h2.about__title La 7ème édition de Brussels dance !
                .about__wrapper-video.hide(data-toggle="open")
                    .about__btn-play
                      svg(width="11" height="14" viewBox="0 0 11 14" fill="none" xmlns="http://www.w3.org/2000/svg")
                        path(d="M11 6.86005V7.14005C10.9992 7.40661 10.8588 7.65326 10.63 7.79005L1.68 13C1.14 13.32 0.86 13.32 0.62 13.18L0.37 13.04C0.147195 12.907 0.00768383 12.6694 0 12.41V1.59005C0.0008087 1.32349 0.141211 1.07683 0.37 0.940047L0.62 0.800047C0.86 0.660047 1.14 0.660047 1.84 1.07005L10.63 6.21005C10.8588 6.34683 10.9992 6.59349 11 6.86005Z" fill="white")
                    video(poster="assets/img/video.jpg")
                      source(src=require("../assets/video/video.mp4") type="video/mp4")
             .about__container-paragraph
                 p.about__paragraph Elle aura lieu du 03 mars au 30 avril 2022 et réunira pas moins de 18 lieux culturels bicommunautaires. En plus de mettre en lumière toute la richesse et la diversité du champ chorégraphique bruxellois, cette édition s’inscrira dans le prolongement du travail de médiation initié avec la création de la mallette pédagogique dans le cadre de Brussels, dance !
                 p.about__paragraph Une danse qui nous interroge (Danse et engagement), une danse qui nous lie (danse et relation), une danse qui nous fait rire (danse et humour), une danse à écouter (danse et musique) seront les maîtres mots de cette 7ème édition. Au-delà de la programmation, une exposition à ciel ouvert élaborée en collaboration avec Lise Bruyneel (La fabrique des regards) sera inaugurée lors de l’événement. Plus de 40 drapés reprenant des photos de danse issues des archives de Contredanse seront suspendus dans les rues de diverses communes de la Région Bruxelles-capitale.
          section.programm.sect-mg-top
            .programm__container
              figure.programm__item.d-flex.programm__img.hide
                      img(src=require(`../assets/img/brussels_dance3.webp`), alt="programme 2022")
              .programm__txt
                h2.programm__title Découvrez le programme 2022
                p.programm__paragraph Cette année plusieurs lieux culturels bicommunautaires — Le 140, le Théâtre la Balsamine, La Bellone, le Beursschouwburg, Bozar, Les Brigittines, Charleroi danse, Contredanse, Les Halles de Schaerbeek, Le Centre culturel Jacques Franck — mettent en commun leur programmation autour de la danse sous le label Brussels, dance ! pour assurer une plus grande visibilité aux artistes de la danse aujourd’hui, qu’il est plus que jamais nécessaire de soutenir.
                a.programm__link.link(href="/programme") Découvrir
          section.artistes.sect-mg-top
              .artistes__grid.w-90
                .artistes__item
                  h2 Découvrez les artistes
                  a(href="/artistes") Découvrir
                each artiste in artistes
                 figure.artistes__item.artistes__img.hide
                       img(src=require(`../assets/img/${artiste.img}`), alt=artiste.alt)
          section.partners.sect-mg-top
              h2.partners__title.w-90 Nos partenaires
              .partners__container
                -for(let i = 0; i<2; i++)
                 ul.partners__wrapper
                  each item, i in partners
                   li.partners__list
                     figure.partners__item
                       img(src=require(`../assets/img/${item.img}`), alt=item.alt)
      include ../components/footer.pug