-const title = "Contact"
include ../../components/head.pug
      main.app#app
        .content
            .bg-black
            section.contact.mg-top.w-90
              h1.contact__title Nous contacter
              .form
                form.contact__form(method="post") 
                   .contact__form-head
                      button.contact__btn-previous(type="button") Précédent
                      .contact__form-nbr 
                           .form-index.inline
                           .form-length.inline
                   .contact__wrapper
                     .form__first-name.center-input 
                       label(for="first-name") Quel est votre prénom ?
                       input#firstName.input(type="text", placeholder="Votre prénom" name="first-name")
                       button.contact__btn-next(type="button") Suivant
                     .form__email.center-input
                       label(for="email") Ou pouvons-nous vous contacter ?
                       input#email.input(type="text", placeholder="Votre email" name="email")
                       button.contact__btn-next(type="button") Suivant
                     .form__message.center-input
                       label(for="message") Quel est votre message ?
                       textarea#message.input(name="message", placeholder="Votre message" cols="20", rows="4")
                       .contact__btn-bottom
                          button.contact__btn-next(type="button") Suivant
                          button.contact__btn-submit(type="submit") Envoyer
                   p.form__message-succes
                     

             
      include ../../components/footer.pug